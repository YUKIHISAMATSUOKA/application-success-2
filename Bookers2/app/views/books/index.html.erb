<h1>Books</h1>

<table class=table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
<% @books.each do |book| %>
 <tr class=toukou>
　 <td><span><%= link_to "#{book.title}", book_path(book) %></span></td>
　 <td><span><%= book.body %></span></td>
<% end %>
  </tr>
</table>


<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>

　<% if @book.errors.any? %>
  <div class=error>
    <ul><h2 class=message>error</h2>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

