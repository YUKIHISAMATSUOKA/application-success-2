<h1>Book detail</h1>

<p class="show">
    <strong>Title</strong>: <%= @book.title %>
    </p>
<p class="show">
    <strong>Body</strong>: <%= @book.body %>
    </p>



<% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path %>
  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか?" %>
<% end %>


