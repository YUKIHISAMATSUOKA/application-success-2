<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <div class="profile-container">
        <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class=table>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </table>
        <% if current_user.id == current_user.id %>
          <%= link_to edit_user_path(current_user), class: "primary text-white", method: :get do %>
            <i class="fas fa-user-cog fa-2x"></i>
          <% end %>
        <% end %>
      </div>
      <br>

      <h2>New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <% if @book.errors.any? %>
          <div class=error>
            <ul><h2 class=message>error</h2>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <h6>Title</h6>
        <%= f.text_field :title %>
        <h6>Opinion</h6>
        <%= f.text_area :body %>
        <br>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class=table>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
        <% @users.each do |user| %>
        <tr class="users">
　        <td><span><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></span></td>
　        <td><span><%= user.name %></span></td>
　        <td><span><%= link_to "Show", user_path(user) %></span></td>
        <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>